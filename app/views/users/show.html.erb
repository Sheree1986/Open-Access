<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card card-block">
       <center> <h4 class="card-title"><%= @user.username.capitalize %>'s Profile</h4>
         
        <p class="card-text">Hi <%= @user.username.capitalize %>!</p></center>
    
      </div>
    </div>
    <div class="col-md-8">
      <ul class="list-group">
        <% @blogs.each do |blog| %>
          <%= link_to blog, class: "list-group-item list-group-item-action" do %>
           
            <center><h5 class="list-group-item-heading"><%= blog.user.username.capitalize %></h5>
            <%= image_tag blog.image, class: "img-fluid" %>
            <p class="list-group-item-text"><%= blog.content %></p></center>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>